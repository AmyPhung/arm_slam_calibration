<launch>
    <arg name="black_border" default="1"/>
    <arg name="camera_name_fisheye" default="/camera/fisheye/" />
    <arg name="image_topic_fisheye" default="image_raw" />
    <arg name="camera_name_stereo" default="/camera/left/" />
    <arg name="image_topic_stereo" default="image_raw" />

    <node pkg="apriltag_ros" type="apriltag_detector_node"
          name="detector_fisheye" output="screen">
        <param name="refine" type="bool" value="true"/>
        <param name="family" type="int" value="0"/>
        <param name="type"   type="int" value="0"/>
        <param name="black_border" type="int" value="$(arg black_border)"/>
        <remap from="~image" to="$(arg camera_name_fisheye)/$(arg image_topic_fisheye)"/>
        <remap from="~tags" to="$(arg camera_name_fisheye)/tags"/>
    </node>
</launch>
